{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Prefix": {
      "type": "string"
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": "lntad"
    },
    "adminPassword": {
      "type": "secureString"
    },
    "vnetIPs": {
      "type": "string",
      "defaultValue": "10.0.0.0/8",
      "allowedValues": [
        "10.0.0.0/8",
        "10.1.0.0/8",
        "172.18.0.0/16",
        "172.19.0.0/16",
        "192.168.0.0/24",
        "192.168.1.0/24"
      ]
    },
    "VMSize": {
      "type": "string",
      "defaultValue": "Small",
      "allowedValues": [
        "Small",
        "Medium",
        "Large"
      ]
    },
    "OperatingSystem": {
      "type": "string",
      "defaultValue": "Client",
      "allowedValues": [
        "Client",
        "Server"
      ]
    }
  },
  "functions": [],
  "variables": {
    "vnetName": "[format('{0}vnet1', parameters('Prefix'))]",
    "nsgName": "[format('{0}nsg1', parameters('Prefix'))]",
    "vmName": "[format('{0}vm1', parameters('Prefix'))]",
    "vmHWSize": {
      "Small": {
        "value": "Standard_B2ms"
      },
      "Medium": {
        "value": "Standard_DS3_v2"
      },
      "Large": {
        "value": "Standard_DS14_v2"
      }
    },
    "VM_Images": {
      "Client": {
        "Publisher": "microsoftwindowsdesktop",
        "offer": "office-365",
        "sku": "20h1-evd-o365pp",
        "version": "latest"
      },
      "Server": {
        "Publisher": "MicrosoftWindowsServer",
        "offer": "WindowsServer",
        "sku": "2019-Datacenter-smalldisk",
        "version": "latest"
      }
    },
    "License": {
      "Server": {
        "License": "Windows_Server"
      },
      "Client": {
        "License": "Windows_Client"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "nsg1",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "Prefix": {
            "value": "[parameters('Prefix')]"
          },
          "name": {
            "value": "[variables('nsgName')]"
          },
          "location": {
            "value": "[resourceGroup().location]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "Prefix": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "location": {
              "type": "string"
            }
          },
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.Network/networkSecurityGroups",
              "apiVersion": "2020-06-01",
              "location": "[parameters('location')]",
              "name": "[parameters('name')]"
            }
          ],
          "outputs": {
            "nsg1Id": {
              "type": "string",
              "value": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('name'))]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "vnet1",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "Prefix": {
            "value": "[parameters('Prefix')]"
          },
          "location": {
            "value": "[resourceGroup().location]"
          },
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "vnetIPs": {
            "value": "[parameters('vnetIPs')]"
          },
          "nsg1Id": {
            "value": "[reference(extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'nsg1'), '2019-10-01').outputs.nsg1Id.value]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "Prefix": {
              "type": "string"
            },
            "vnetName": {
              "type": "string"
            },
            "vnetIPs": {
              "type": "string"
            },
            "nsg1Id": {
              "type": "string"
            },
            "location": {
              "type": "string"
            }
          },
          "functions": [],
          "variables": {
            "vnetSubIPs": "[parameters('vnetIPs')]"
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2020-06-01",
              "name": "[parameters('vnetName')]",
              "location": "[resourceGroup().location]",
              "properties": {
                "addressSpace": {
                  "addressPrefixes": "[parameters('vnetIPs')]"
                },
                "subnets": [
                  {
                    "name": "subnet1",
                    "properties": {
                      "addressPrefix": "[variables('vnetSubIPs')]",
                      "networkSecurityGroup": {
                        "id": "[parameters('nsg1Id')]"
                      }
                    }
                  }
                ]
              }
            }
          ],
          "outputs": {
            "vnetId": {
              "type": "string",
              "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
            },
            "subnetId": {
              "type": "string",
              "value": "[format('{0}/subnets/{{vnetSubName}}', resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')))]"
            }
          }
        }
      },
      "dependsOn": [
        "[extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'nsg1')]"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "vm1",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "adminUserName": {
            "value": "[parameters('adminUserName')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "location": {
            "value": "[resourceGroup().location]"
          },
          "Prefix": {
            "value": "[parameters('Prefix')]"
          },
          "vnetId": {
            "value": "[reference(extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'vnet1'), '2019-10-01').outputs.vnetId.value]"
          },
          "subnetId": {
            "value": "[reference(extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'vnet1'), '2019-10-01').outputs.vnetId.value]"
          },
          "vmSize": {
            "value": "[variables('vmHWSize')[parameters('VMSize')].value]"
          },
          "OperatingSystem": {
            "value": "[variables('VM_Images')[parameters('OperatingSystem')]]"
          },
          "License": {
            "value": "[variables('License')[parameters('OperatingSystem')].License]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "Prefix": {
              "type": "string"
            },
            "adminUserName": {
              "type": "string"
            },
            "adminPassword": {
              "type": "secureString"
            },
            "OperatingSystem": {
              "type": "string"
            },
            "License": {
              "type": "object"
            },
            "vnetId": {
              "type": "string"
            },
            "subnetId": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "vmSize": {
              "type": "string"
            }
          },
          "functions": [],
          "variables": {
            "avsetName": "[format('{0}avset1', parameters('Prefix'))]",
            "vmName": "[format('{0}vm1', parameters('Prefix'))]",
            "nicName": "[format('{0}nic1', parameters('Prefix'))]"
          },
          "resources": [
            {
              "type": "Microsoft.Compute/availabilitySets",
              "apiVersion": "2020-06-01",
              "name": "[variables('avsetName')]",
              "location": "[parameters('location')]",
              "properties": {
                "platformFaultDomainCount": 5,
                "platformUpdateDomainCount": 2
              }
            },
            {
              "type": "Microsoft.Network/networkInterfaces",
              "apiVersion": "2020-06-01",
              "name": "[variables('nicName')]",
              "location": "[parameters('location')]",
              "properties": {
                "ipConfigurations": [
                  {
                    "name": "ipconfig1",
                    "properties": {
                      "primary": true,
                      "privateIPAllocationMethod": "Dynamic",
                      "subnet": {
                        "id": "[parameters('subnetId')]"
                      }
                    }
                  }
                ]
              }
            },
            {
              "type": "Microsoft.Compute/virtualMachines",
              "apiVersion": "2020-06-01",
              "name": "[variables('vmName')]",
              "location": "[parameters('location')]",
              "properties": {
                "availabilitySet": {
                  "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('avsetName'))]"
                },
                "hardwareProfile": {
                  "vmSize": "Standard_B2ms"
                },
                "osProfile": {
                  "adminUsername": "[parameters('adminUserName')]",
                  "adminPassword": "[parameters('adminPassword')]",
                  "computerName": "[variables('vmName')]",
                  "windowsConfiguration": {
                    "provisionVMAgent": true
                  }
                },
                "networkProfile": {
                  "networkInterfaces": [
                    {
                      "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",
                      "properties": {
                        "primary": true
                      }
                    }
                  ]
                },
                "storageProfile": {
                  "osDisk": {
                    "name": "[format('{0}-osDisk', variables('vmName'))]",
                    "caching": "ReadWrite",
                    "createOption": "FromImage",
                    "managedDisk": {
                      "storageAccountType": "StandardSSD_LRS"
                    },
                    "osType": "Windows"
                  },
                  "imageReference": {
                    "publisher": "[parameters('OperatingSystem')]",
                    "offer": "[parameters('OperatingSystem')]",
                    "sku": "[parameters('OperatingSystem')]",
                    "version": "[parameters('OperatingSystem')]"
                  }
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Compute/availabilitySets', variables('avsetName'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
              ]
            }
          ]
        }
      },
      "dependsOn": [
        "[extensionResourceId(resourceGroup().id, 'Microsoft.Resources/deployments', 'vnet1')]"
      ]
    }
  ]
}