{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webappName": {
      "type": "string",
      "defaultValue": "lfa"
    },
    "acrPassword": {
      "type": "secureString"
    },
    "sqlServerPassword": {
      "type": "secureString"
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "this is your location"
      },
      "defaultValue": "eastus",
      "allowedValues": [
        "eastus",
        "westus",
        "uksouth"
      ]
    }
  },
  "functions": [],
  "variables": {
    "principal": "5f1ed457-d451-4f9b-9e0d-eeca89bd066c",
    "contributorRole": "b24988ac-6180-42a0-ab88-20f7382dd24c"
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2020-04-01-preview",
      "name": "[guid(resourceGroup().id)]",
      "properties": {
        "principalId": "[variables('principal')]",
        "roleDefinitionId": "[variables('contributorRole')]"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "lfadeploy",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "webAppName": {
            "value": "[parameters('webappName')]"
          },
          "arcName": {
            "value": "lawrencefarmsantiqes"
          },
          "dockerImageAndTag": {
            "value": "lfa/frontend:latest"
          },
          "dockerUserName": {
            "value": "lfaAdmin"
          },
          "dockerPassword": {
            "value": "[parameters('acrPassword')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "webAppName": {
              "type": "string"
            },
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]"
            },
            "arcName": {
              "type": "string"
            },
            "dockerUserName": {
              "type": "string"
            },
            "dockerPassword": {
              "type": "string"
            },
            "dockerImageAndTag": {
              "type": "string"
            }
          },
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.Web/sites",
              "apiVersion": "2020-06-01",
              "name": "[format('{0}-site', parameters('webAppName'))]",
              "location": "[parameters('location')]",
              "properties": {
                "siteConfig": {
                  "appSettings": [
                    {
                      "name": "DOCKER_REGISTRY_SERVER_URL",
                      "value": "[format('https://{0}.azurecr.io', parameters('arcName'))]"
                    },
                    {
                      "name": "DOCKER_REGISTRY_SERVER_USERNAME",
                      "value": "[parameters('dockerUserName')]"
                    },
                    {
                      "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
                      "value": "[parameters('dockerPassword')]"
                    },
                    {
                      "name": "WEBSITES_ENABLED_APP_SERVICE_STORAGE",
                      "value": "false"
                    }
                  ],
                  "linuxFxVersion": "[format('DOCKER|{0}.azure.io/{1}', parameters('arcName'), parameters('dockerImageAndTag'))]"
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('webAppName'))]"
              },
              "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('webAppName'))]"
              ]
            },
            {
              "type": "Microsoft.Web/serverfarms",
              "apiVersion": "2020-06-01",
              "name": "[parameters('webAppName')]",
              "location": "[parameters('location')]",
              "sku": {
                "name": "B1",
                "tier": "Basic"
              },
              "kind": "linux",
              "properties": {
                "targetWorkerSizeId": 0,
                "targetWorkerCount": 1,
                "reserved": true
              }
            }
          ],
          "outputs": {
            "websiteId": {
              "type": "string",
              "value": "[resourceId('Microsoft.Web/sites', format('{0}-site', parameters('webAppName')))]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "datadeploy",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "serverName": {
            "value": "lfaserver"
          },
          "userName": {
            "value": "adminuser"
          },
          "password": {
            "value": "[parameters('sqlServerPassword')]"
          },
          "dbName": {
            "value": "lfadb"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "serverName": {
              "type": "string"
            },
            "userName": {
              "type": "string"
            },
            "password": {
              "type": "secureString"
            },
            "dbName": {
              "type": "string"
            }
          },
          "functions": [],
          "resources": []
        }
      }
    }
  ]
}